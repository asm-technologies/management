$(document).ready(function () {
  function createChart(container, text, valA, valB) {
  alert(valA,calB);
  $(container).highcharts({
    chart: {
        plotBackgroundColor: null,
        plotBorderWidth: null,
        plotShadow: false
    },
    tooltip: {
        pointFormat: '{series.name}: {point.y}</b>'
    },

    title: { text: text },
    series: [{
      type: 'pie',
      name: text,
      data: [
        ['Bill',   valA ],
        ['Non-Bill', valB ],
      ]
    }]
  });
}

{% for pjs in mylist %}
